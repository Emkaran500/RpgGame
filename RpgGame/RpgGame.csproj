      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <Resource Include="View\grass_tile_1.png" />
    <Resource Include="View\grass_tile_2.png" />
    <Resource Include="View\grass_tile_3.png" />
